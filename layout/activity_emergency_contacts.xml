<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EmergencyContactsActivity" android:weightSum="100"
    android:orientation="vertical"

    android:background="#E52B50">
    <ImageView
        android:id="@+id/help"
        android:background="@drawable/iuyt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:orientation="horizontal" >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10" />
        <EditText
            android:id="@+id/editText1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textColor="#001941"
            android:background="@android:color/white"
            android:textColorHint="#001941"
            android:layout_weight="80"
            android:hint="Enter First Person Name"

            android:inputType="textPersonName"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:orientation="horizontal" >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10" />
        <EditText
            android:id="@+id/editText2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:textColor="#001941"
            android:background="@android:color/white"
            android:textColorHint="#001941"
            android:hint="Enter first PersonContactNo"

            android:inputType="phone"/>


        <Button
            android:id="@+id/choosecontact1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:background="@drawable/contat"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:orientation="horizontal" >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10" />
        <EditText
            android:id="@+id/editText3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="80"

            android:textColor="#001941"
            android:background="@android:color/white"
            android:textColorHint="#001941"
            android:hint="Enter Second Person Name"

            android:inputType="textPersonName"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:orientation="horizontal" >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10" />
        <EditText
            android:id="@+id/editText4"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:hint="EnterSecondPersonContact"

            android:textColor="#001941"
            android:background="@android:color/white"
            android:textColorHint="#001941"
            android:inputType="phone"/>
        <Button
            android:id="@+id/choosecotact2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:background="@drawable/contat"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#EEEEEF"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Save"
        android:textColor="#E52B50"/>



</LinearLayout>